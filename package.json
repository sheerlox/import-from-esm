{
	"name": "import-from-esm",
	"version": "1.0.1",
	"main": "index.js",
	"type": "module",
	"description": "Import a module like with `require()` but from a given path (for ESM)",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/sheerlox/import-from-esm.git"
	},
	"author": "Pierre Cavin <me@sherlox.io> (https://github.com/sheerlox)",
	"contributors": [
		"Sindre Sorhus <sindresorhus@gmail.com> (https://sindresorhus.com)"
	],
	"engines": {
		"node": ">=16.20"
	},
	"scripts": {
		"test": "c8 ava && tsd --files tests/**/*.test-d.ts",
		"lint": "xo",
		"lint:fix": "xo --fix",
		"fuzz": "jazzer --disable_bug_detectors=path-traversal tests/fuzzing/fuzz-target.cjs",
		"fuzz:jest": "JAZZER_FUZZ=1 NODE_OPTIONS=--experimental-vm-modules jest tests/fuzzing/fuzz.test.js --watch",
		"fuzz:jest:coverage": "NODE_OPTIONS=--experimental-vm-modules jest tests/fuzzing/fuzz.test.js --coverage"
	},
	"files": [
		"index.js",
		"index.d.ts",
		"lib/**/*.js"
	],
	"keywords": [
		"require",
		"resolve",
		"path",
		"module",
		"from",
		"like",
		"import",
		"path"
	],
	"devDependencies": {
		"@insurgentlab/conventional-changelog-preset": "7.0.0",
		"@jazzer.js/core": "^2.0.0",
		"@jazzer.js/jest-runner": "^2.0.0",
		"@semantic-release/changelog": "6.0.3",
		"@semantic-release/git": "10.0.1",
		"ava": "5.3.1",
		"c8": "8.0.1",
		"eslint-plugin-jest": "^27.4.2",
		"jest": "^29.7.0",
		"semantic-release": "22.0.5",
		"tsd": "0.29.0",
		"xo": "0.56.0"
	},
	"xo": {
		"plugins": [
			"jest"
		],
		"envs": [
			"jest/globals"
		],
		"rules": {
			"unicorn/no-await-expression-member": "off",
			"object-curly-spacing": [
				"error",
				"always"
			]
		},
		"ignores": [
			"lib/"
		]
	},
	"ava": {
		"files": [
			"!tests/fuzzing"
		]
	},
	"c8": {
		"include": [
			"index.js"
		],
		"check-coverage": true,
		"reporter": [
			"text",
			"lcov"
		],
		"statements": 95,
		"branches": 85,
		"functions": 100,
		"lines": 95
	}
}
