{
	"name": "import-from-esm",
	"version": "0.1.0",
	"main": "index.js",
	"type": "module",
	"description": "Import a module like with `require()` but from a given path (for ESM)",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/sheerlox/import-from-esm.git"
	},
	"author": "Pierre Cavin <me@sherlox.io> (https://github.com/sheerlox)",
	"contributors": [
		"Sindre Sorhus <sindresorhus@gmail.com> (https://sindresorhus.com)"
	],
	"engines": {
		"node": ">=16.20"
	},
	"scripts": {
		"test": "c8 ava && tsd",
		"lint": "xo",
		"lint:fix": "xo --fix"
	},
	"files": [
		"index.js",
		"index.d.ts",
		"lib/**/*.js"
	],
	"keywords": [
		"require",
		"resolve",
		"path",
		"module",
		"from",
		"like",
		"import",
		"path"
	],
	"devDependencies": {
		"@insurgentlab/conventional-changelog-preset": "^7.0.0",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/git": "^10.0.1",
		"ava": "5.3.1",
		"c8": "^8.0.1",
		"semantic-release": "^22.0.5",
		"tsd": "0.29.0",
		"xo": "0.56.0"
	},
	"xo": {
		"rules": {
			"unicorn/no-await-expression-member": "off",
			"object-curly-spacing": [
				"error",
				"always"
			]
		},
		"ignores": [
			"lib/"
		]
	},
	"c8": {
		"include": [
			"index.js"
		],
		"check-coverage": true,
		"reporter": [
			"text",
			"json"
		],
		"statements": 95,
		"branches": 85,
		"functions": 100,
		"lines": 95
	}
}
